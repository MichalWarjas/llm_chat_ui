<mvc:View
    controllerName="mw.osllm.chat.controller.Chat"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                    	<FeedInput id="_IDGenFeedInput1"
		post="onPost"
		icon="./pictures/john_conor.jpg"
		class="sapUiSmallMarginTopBottom"
		placeholder="Post your question here" />
	<List id="feedList"
		showSeparators="Inner"
		items="{/EntryCollection}"
		busy="{settings>/busy}">
		<FeedListItem id="_IDGenFeedListItem1"
			sender="{Author}"
			icon="{AuthorPicUrl}"
			senderPress="onSenderPress"
			iconPress="onIconPress"
			maxCharacters="5000"
			moreLabel="Show full answer"
			info="{Type}"
			timestamp="{Date}"
			text="{Text}"
			convertLinksToAnchorTags="All">
			<actions>
			<FeedListItemAction id="_IDGenFeedListItemAction1" key="new_input" text="Reset conversation" press="resetChat">
			</FeedListItemAction>
			</actions>
			</FeedListItem>
	</List>
                    </content>
                </Page>
            </pages>
        </App>
</mvc:View>
